/* pages/student/student.wxss */
.picture{
    display: flex;
    flex-direction: column;
    align-content: center;
}
.img{
    height:40px;
    align-self: center;
}
.swiper{
     height: 180px;
     width: 100%
}
.swiper image{
    width: 100%;
    height:100%;
}
.table{
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    width: 100%;
}
.tr{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 100%;
}
.td{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 15px;
    border: 1px solid rgba(0,0,0,0.02);
    flex: 1 1 auto;
}
.td image{
    height: 35px;
    width: 35px;
    margin: 10px 0;
}
.td text{
    font-size: 12px;
}
.inform{
    font: 20px 宋体;
    border-bottom: 2px solid rgba(0,0,0,0.2);
    margin-left: 10px;
}
.inform text:nth-child(2){
    font-style: italic;
}